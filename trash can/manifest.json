{
  "manifest_version": 2,

  "name": "Persistent Gremlins",
  "description": "This extension allows the user to persistently monkey test a page.",
  "version": "1.0",

  "background": {
    "scripts": ["persistance.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon-off.png",
	"default_title": "Persistent Gremlins"
  },

  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}